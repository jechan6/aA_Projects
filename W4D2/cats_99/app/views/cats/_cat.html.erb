<style >
  table,
  td {
    border: 1px solid #333;
  }
  thead {
      background-color: #333;
      color: #fff;
  }

</style>
<table>
    <thead>
        <tr>
            <th colspan="2"><%= cat.name %></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Birth Date</td>
            <td> <%= cat.birth_date %></td>
        </tr>
        <tr>
            <td>Color</td>
            <td><%= cat.color %></td>
        </tr>
        <tr>
            <td> Sex </td>
            <td> <%= cat.sex %> </td>
        </tr>
        <tr>
            <td>Description</td>
            <td> <%= cat.description %> </td>
        </tr>
    </tbody>
</table>
<% if action == :show %>
<table>
    <thead>
        <tr>
            <th colspan="5">Cat Requests</th>
        </tr>
    </thead>
    <tbody>
        <% i = 1 %>
        <% @cat_rentals.each do |cat_rental|  %>
        
        <tr>
            <td>Request Number <%=i%></td>
            <% i += 1 %>
            <td>start_date</td>
            <td><%= cat_rental.start_date %></td>
            <td>end_date</td>
            <td><%= cat_rental.end_date %></td>
            <% if cat_rental.status == 'PENDING' %>
              <td> <a href=" <%=cat_rental_request_approve_url(cat_rental)%>">Approve</a></td>
              <td> <a href=" <%=cat_rental_request_deny_url(cat_rental)%> ">Deny</a> </td>
            <% end %>
        </tr>
    
        <% end %>
    </tbody>
</table>
<% end %>
<% if action == :index %>
  <a href="<%= cat_url(cat)%>"> Show Cat </a> <br> 
  <a href="<%= edit_cat_url(cat) %>">Edit Cat</a>
<% else %>
  <a href="<%= edit_cat_url(cat) %>">Edit Cat</a> <br>
  <a href="<%= cats_url %>">All Cats</a>
<% end %>


